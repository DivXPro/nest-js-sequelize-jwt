{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": false,
    "strictNullChecks": true,
    "noLib": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "outDir": "build"
  },
  "include": [
    "src/migrate.ts",
    "src/server.ts",
    "src/modules/common/config/**/*.ts",
    "src/modules/common/filters/**/*.ts",
    "src/modules/common/lib/**/*.ts",
    "src/modules/common/middlewares/**/*.ts",
    "src/modules/common/migrations/**/*.ts",
    "src/modules/common/models/**/*.ts",
    "src/modules/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "assets"
  ]
}